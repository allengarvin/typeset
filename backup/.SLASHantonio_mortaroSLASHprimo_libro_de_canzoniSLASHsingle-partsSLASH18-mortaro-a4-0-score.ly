\header {
    % Things that change per piece:
    title = "La Patuzza"
    language = "instrumental"
    subtitle = ""
    instrument = "La Patuzza:  (score)"

    % Unchanging:
    lastupdated = "2019-09-29"
    originallyset = "2019-09-29"
    flats = 0
    final = "g"
    categories = "[canzona]"
    \include "include/distribution-header.ly"
