    % Unchanging:
    language = "instrumental"
    originallyset = "2018-06-30"
    categories = "[canzona]"
    lastupdated = "2018-06-30"
    flats = 1
    final = "g"
    shorttitle = "fantasia_2"
    \include "include/distribution-header.ly"
    tagline = #'f
