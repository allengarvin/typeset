\header {
    % Things that change per piece:
    title = "La Nicolina"
    language = "instrumental"
    subtitle = ""
    instrument = "La Nicolina:  (score)"

    % Unchanging:
    originallyset = "2019-01-03"
    lastupdated = "2019-01-03"
    flats = 1
    final = "f"
    \include "include/distribution-header.ly"
    tagline = #'f
